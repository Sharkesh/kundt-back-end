@{
    ViewBag.Title = "KundenDetail";
}
<style>
    .CenteredButton{
        display: block;
        margin: auto;
    }
    .TabellenGitter{
        border:1px solid black;
        height:2em;
        
    }
    #Kopfzeile{
        height:4em;
    }
    #Tabelle{
        margin-left:auto;
        margin-right:auto;
        margin-bottom:1em;
    }


</style>


<div class="container" style="border:5px solid black">
    <div class="row">
        @*Ersten 12 Zeilen Row Einteilung Anfang*@
        <div style="margin:5px;"></div>
        <form>
            <div class="col-lg-6">
                <div class="form-group">
                    <label for="Vorname">Vorname</label>
                    <input type="text" class="form-control" id="Vorname" placeholder="Vorname">
                </div>
                <div class="form-group">
                    <label for="Nachname">Nachname</label>
                    <input type="text" class="form-control" id="Nachname" placeholder="Nachname">
                </div>
                <div class="form-group">
                    <label for="Email">E-Mail</label>
                    <input type="email" class="form-control" id="Email" placeholder="E-mail">
                </div>
                <div class="form-group">
                    <label for="Adresse">Adresse</label>
                    <input type="text" class="form-control" id="Adresse" placeholder="Adresse">
                </div>
                <div class="form-group">
                    <label for="PLZ">PLZ</label>
                    <input type="text" class="form-control" id="PLZ" placeholder="PLZ">
                </div>
            </div> @*Ende colspan-lg-6*@
            <div class="">
                <div class="form-group">
                    <label for="Ort">Ort</label>
                    <input type="text" class="form-control" id="Ort" placeholder="Ort">
                </div>
                <div class="form-group">
                    <label for="PassNR">Reisepass</label>
                    <input type="text" class="form-control" id="PassNR" placeholder="Reisepass">
                </div>
            </div>

        </form>
    </div> @*Ersten 12 Zeilen Row Einteilung Ende*@
    <center>
        <div class="row" id="Tabelle">
            <table>
                <tr class="TabellenGitter" id="Kopfzeile">
                    <th class="col-lg-2 TabellenGitter">BuchungsNr.</th>
                    <th class="col-lg-2 TabellenGitter">Buchungsdatum</th>
                    <th class="col-lg-2 TabellenGitter">Rückgabe</th>
                    <th class="col-lg-2 TabellenGitter">Status</th>
                   
                </tr>
                <tr class="TabellenGitter">
                    <td class="col-lg-2 TabellenGitter">BNR. 1</td>
                    <td class="col-lg-2 TabellenGitter">Er. 1</td>
                    <td class="col-lg-2 TabellenGitter">Rü. 1</td>
                    <td class="col-lg-2 TabellenGitter">St. 1</td>
                   
                </tr>
                <tr class="TabellenGitter">
                    <td class="col-lg-2 TabellenGitter">BNR. 2</td>
                    <td class="col-lg-2 TabellenGitter">Er. 2</td>
                    <td class="col-lg-2 TabellenGitter">Rü. 2</td>
                    <td class="col-lg-2 TabellenGitter">St. 2</td>
                </tr>
                <tr class="TabellenGitter">
                    <td class="col-lg-2 TabellenGitter">BNR. 3</td>
                    <td class="col-lg-2 TabellenGitter">Er. 3</td>
                    <td class="col-lg-2 TabellenGitter">Rü. 3</td>
                    <td class="col-lg-2 TabellenGitter">St. 3</td>
                </tr>
                <tr class="TabellenGitter">
                    <td class="col-lg-2 TabellenGitter">BNR. 4</td>
                    <td class="col-lg-2 TabellenGitter">Er. 4</td>
                    <td class="col-lg-2 TabellenGitter">Rü. 4</td>
                    <td class="col-lg-2 TabellenGitter">St. 4</td>
                </tr>
                <tr class="TabellenGitter">
                    <td class="col-lg-2 TabellenGitter">BNR. 5</td>
                    <td class="col-lg-2 TabellenGitter">Er. 5</td>
                    <td class="col-lg-2 TabellenGitter">Rü. 5</td>
                    <td class="col-lg-2 TabellenGitter">St. 5</td>
                </tr>
                <tr class="TabellenGitter">
                    <td class="col-lg-2 TabellenGitter">BNR. 6</td>
                    <td class="col-lg-2 TabellenGitter">Er. 6</td>
                    <td class="col-lg-2 TabellenGitter">Rü. 6</td>
                    <td class="col-lg-2 TabellenGitter">St. 6</td>
                </tr>
                <tr class="TabellenGitter">
                    <td class="col-lg-2 TabellenGitter">BNR. 7</td>
                    <td class="col-lg-2 TabellenGitter">Er. 7</td>
                    <td class="col-lg-2 TabellenGitter">Rü. 7</td>
                    <td class="col-lg-2 TabellenGitter">St. 7</td>
                </tr>
            </table>
        </div>
    </center>
    <button type="submit" class="btn btn-default CenteredButton">Aktualisieren</button>
</div>
        




 