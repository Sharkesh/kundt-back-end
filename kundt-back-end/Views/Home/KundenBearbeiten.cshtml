@model kundt_back_end.Models.KundeEditModel
@{
    ViewBag.Title = "Kunde Bearbeiten";
}
<style>
    .EditDisplayWidth {
        max-width: 280px;
    }

    .buttonOrangeSave {
        background-color: #f99b1c;
        border: none;
        color: #ffffff;
        font-size: 15px;
        height: 50px;
        width: 200px;
        font-weight: 700;
        letter-spacing: .5px;
        text-align: center;
    }

        .buttonOrangeSave:hover {
            background-color: #f99b1c;
            border: none;
            color: #ffffff;
            font-size: 15px;
            height: 50px;
            width: 200px;
            font-weight: 700;
            letter-spacing: .5px;
            text-align: center;
            opacity: 0.7;
        }

    .buttonOrangeNextStep {
        background-color: #f99b1c;
        border: none;
        color: #ffffff;
        font-size: 15px;
        height: 50px;
        width: 200px;
        font-weight: 700;
        letter-spacing: .5px;
        text-align: center;
        display: inline-block;
        border-radius: 4px;
    }

        .buttonOrangeNextStep span {
            cursor: pointer;
            display: inline-block;
            position: relative;
            transition: 0.5s;
        }

            .buttonOrangeNextStep span:after {
                content: '\00bb';
                position: absolute;
                opacity: 0;
                top: 0;
                right: -30px;
                transition: 0.5s;
                font-size: 15px;
            }

        .buttonOrangeNextStep:hover span {
            padding-right: 15px;
        }

            .buttonOrangeNextStep:hover span:after {
                opacity: 1;
                right: 0;
            }

        .buttonOrangeNextStep:hover {
            background-color: #f99b1c;
            border: none;
            color: #ffffff;
            font-size: 15px;
            height: 50px;
            width: 200px;
            font-weight: 700;
            letter-spacing: .5px;
            text-align: center;
        }


    .buttonOrangeReturn {
        background-color: #f99b1c;
        border: none;
        color: #ffffff;
        font-size: 15px;
        height: 50px;
        width: 200px;
        font-weight: 700;
        letter-spacing: .5px;
        text-align: center;
        display: inline-block;
        border-radius: 4px;
    }

        .buttonOrangeReturn span {
            cursor: pointer;
            display: inline-block;
            position: relative;
            transition: 0.5s;
        }

            .buttonOrangeReturn span:after {
                content: '\00ab';
                position: absolute;
                opacity: 0;
                top: 0;
                left: -30px;
                transition: 0.5s;
                font-size: 15px;
            }

        .buttonOrangeReturn:hover span {
            padding-left: 15px;
        }

            .buttonOrangeReturn:hover span:after {
                opacity: 1;
                left: 0;
            }

        .buttonOrangeReturn:hover {
            background-color: #f99b1c;
            border: none;
            color: #ffffff;
            font-size: 15px;
            height: 50px;
            width: 200px;
            font-weight: 700;
            letter-spacing: .5px;
            text-align: center;
        }

    .headingFormat {
        margin: auto auto 20px auto;
        color: white;
        background-color: #f99b1c;
        vertical-align: middle;
        padding: 0px;
        border-radius: 4px;
        box-shadow: lightgray 1px 1px 0px;
        text-align: center;
    }

    .disabledField {
        background-color: #eee;
    }
</style>

<div class="headingFormat">
    <h2 style="padding:5px;">Kunden bearbeiten</h2>
</div>
<div class="container" style="padding-top:15px;">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.idkunde)
            <div class="row">
                <div class="col-lg-6">
                    <div class="form-group">
                        @Html.LabelFor(model => model.Vorname, "Vorname:", htmlAttributes: new { @class = "control-label col-lg-4" })
                        <div class="col-lg-8">
                            <input type="text" id="Vorname" name="Vorname" value="@Model.Vorname" class="form-control input EditDisplayWidth" />
                            @Html.ValidationMessageFor(model => model.Vorname, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.Nachname, "Nachname:", htmlAttributes: new { @class = "control-label col-lg-4" })
                        <div class="col-lg-8">
                            <input type="text" id="Nachname" name="Nachname" value="@Model.Nachname" class="form-control input EditDisplayWidth" />
                            @Html.ValidationMessageFor(model => model.Nachname, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.Straße, "Straße:", htmlAttributes: new { @class = "control-label col-lg-4" })
                        <div class="col-lg-8">
                            <input type="text" id="Straße" name="Straße" value="@Model.Straße" class="form-control input EditDisplayWidth" />
                            @Html.ValidationMessageFor(model => model.Straße, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.Plz, "PLZ:", htmlAttributes: new { @class = "control-label col-lg-4" })
                        <div class="col-lg-8">
                            <input type="text" id="Plz" name="Plz" value="@Model.Plz" class="form-control input EditDisplayWidth" />
                            @Html.ValidationMessageFor(model => model.Plz, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.Telefon, "Telefon:", htmlAttributes: new { @class = "control-label col-lg-4" })
                        <div class="col-lg-8">
                            <input type="text" id="Telefon" name="Telefon" value="@Model.Telefon" class="form-control input EditDisplayWidth" />
                            @Html.ValidationMessageFor(model => model.Telefon, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="form-group">
                        @Html.LabelFor(model => model.idkunde, "Kundennummer:", htmlAttributes: new { @class = "control-label col-lg-4" })
                        <div class="col-lg-8">
                            <div name="idkunde" id="idkunde" class="form-control input EditDisplayWidth disabledField">
                                @Model.idkunde
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.PassNr, "Passnummer:", htmlAttributes: new { @class = "control-label col-lg-4" })
                        <div class="col-lg-8">
                            <div id="PassNr" name="PassNr" class="form-control input EditDisplayWidth disabledField">@Model.PassNr</div>
                            @Html.ValidationMessageFor(model => model.PassNr, "", new { @class = "text-danger" })
                            @Html.HiddenFor(model => model.PassNr)
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.GebDat, "Geburtsdatum:", htmlAttributes: new { @class = "control-label col-lg-4" })
                        <div class="col-lg-8">
                            <div id="GebDat" name="GebDat" class="form-control input EditDisplayWidth disabledField">@Model.GebDat.ToString("dd.MM.yyyy")</div>
                            @Html.ValidationMessageFor(model => model.GebDat, "", new { @class = "text-danger" })
                            @Html.HiddenFor(model => model.GebDat)
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.Ort, "Ort:", htmlAttributes: new { @class = "control-label col-lg-4" })
                        <div class="col-lg-8">
                            <div id="Ort" name="Ort" class="form-control input EditDisplayWidth disabledField">@Model.Ort</div>
                            @Html.ValidationMessageFor(model => model.Ort, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.Email, "E-Mail:", htmlAttributes: new { @class = "control-label col-lg-4" })
                        <div class="col-lg-8">
                            <div id="Email" name="Email" class="form-control input EditDisplayWidth disabledField">@Model.Email</div>
                            @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                            @Html.HiddenFor(model => model.Email)
                        </div>
                    </div>
                </div>
            </div>
            <div class="container" style="margin-top:50px;">
                <div class="row">
                    <center>
                        <div class="col-lg-4">
                            <a href="@Url.Action("KundenUebersicht", "Home")">
                                <button type="button" class="buttonOrangeReturn" value="Zurück zu Kunden"><span>Zur Kundenübersicht</span></button>
                            </a>
                        </div>
                        <div>
                            <div class="col-lg-4">
                                <input type="submit" value="Aktualisieren" class="btn buttonOrangeSave" />
                            </div>
                        </div>
                        <div class="col-lg-4">
                            <a href="@Url.Action("Index", "BuchungUebersicht")">
                                <button type="button" class="buttonOrangeNextStep" value="Zurück zur Übersicht"><span>Zur Übersicht</span></button>
                            </a>
                        </div>
                    </center>
                </div>
            </div>
        </div>
    }
</div>