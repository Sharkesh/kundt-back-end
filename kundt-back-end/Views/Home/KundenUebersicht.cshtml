@using System.Web.UI.WebControls
@using kundt_back_end.Models;
@using Microsoft.Ajax.Utilities


@model KundenUebersichtContainerModel



@{
    ViewBag.Title = "Übersicht Kunden";
}
<style>
    .CenteredButton {
        display: block;
        margin: auto;
    }

    .SuchFilter_abstand {
        margin-top: 10px;
        margin-bottom: 10px;
    }

    table {
        width: 100%;
    }

    thead, tbody, tr, td, th {
        text-align: center;
    }

    .table > thead > tr > th {
        vertical-align: bottom;
        border-bottom: 0px;
    }

    tbody, tr /*, td,th, thead*/ {
        display: block;
    }

        tr:after {
            content: ' ';
            display: block;
            visibility: hidden;
            clear: both;
        }

    thead th {
        height: 30px;
    }

    tbody {
        height: 300px;
        overflow-y: auto;
    }

        tbody td, thead th {
            width: auto;
            float: left;
        }

    .costomListOnKlick {
        border: none;
        margin: -10px;
        margin-bottom: 0px;
        padding-top: 0px;
        padding: 0px;
        border-bottom: 1px solid gray;
    }

    .headingFormat {
        margin: auto auto 20px auto;
        color: white;
        background-color: #f99b1c;
        border-radius: 4px;
        box-shadow: lightgray 1px 1px 0px;
        text-align: center;
        height: 40px;
        font-size: 32px;
    }
</style>

<div class="headingFormat">
    <h2 style="padding:5px;">Kunden Übersicht</h2>
</div>


<div class="container" style="border:2px solid black;">
    <div class="row">
        <div class="col-lg-3">
            <div class="row" style="margin: 10px; padding: 10px; height: 400px;">
                <form method="post" action="/Home/KundenUebersichtFilter">
                    <center><h3>Suchen</h3></center>
                    <input type="text" value="@if (@Model.filtermodel != null){ @Model.filtermodel.KundenName }" placeholder="Nachname" id="KundenName" name="KundenName" class="col-lg-12 SuchFilter_abstand" />
                    <input type="text" value="@if (@Model.filtermodel != null){ @Model.filtermodel.KundenNr }" placeholder="Kunden-Nr." id="KundenNr" name="KundenNr" class="col-lg-12 SuchFilter_abstand" />
                    <input type="text" value="@if (@Model.filtermodel != null){ @Model.filtermodel.Ort }" placeholder="Ort" id="Ort" name="Ort" class="col-lg-12 SuchFilter_abstand" />
                    <input type="text" value="@if (@Model.filtermodel != null){ @Model.filtermodel.Plz }" placeholder="PLZ" id="PLZ" name="PLZ" class="col-lg-12 SuchFilter_abstand" />

                    <input class="col-lg-6 col-lg-offset-3 SuchFilter_abstand" type="submit" value="Suchen" />
                </form>
            </div>
        </div>

        <div class="col-lg-9">
            <div class="row table-responsive" style="height: 500px;">
                <table class="table">
                    <thead>
                        <tr style="margin-right: 16px; margin-bottom: 10px; border-bottom: 1px solid black">
                            <th style="width: 8%;">Ku-Nr.</th>
                            <th style="width: 20%;">Vorname</th>
                            <th style="width: 20%;">Nachname</th>
                            <th style="width: 15%;">PLZ</th>
                            <th style="width: 17%;">Ort</th>
                            <th style="width: 18%;">Bearbeiten</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in @Model.kundenlist)
                        {
                            <tr>
                                <td style="width: 8%;"><a href="@Url.Action("KundenBearbeiten", "Home", new {ID = item.IDKunde})" class="costomListOnKlick list-group-item">@Html.DisplayFor(x => item.IDKunde)</a></td>
                                <td style="width: 20%;"><a href="@Url.Action("KundenBearbeiten", "Home", new {ID = item.IDKunde})" class="costomListOnKlick list-group-item">@Html.DisplayFor(x => item.Vorname)</a></td>
                                <td style="width: 20%;"><a href="@Url.Action("KundenBearbeiten", "Home", new {ID = item.IDKunde})" class="costomListOnKlick list-group-item">@Html.DisplayFor(x => item.Nachname)</a></td>
                                <td style="width: 15%;"><a href="@Url.Action("KundenBearbeiten", "Home", new {ID = item.IDKunde})" class="costomListOnKlick list-group-item">@Html.DisplayFor(x => item.PLZ)</a></td>
                                <td style="width: 17%;"><a href="@Url.Action("KundenBearbeiten", "Home", new {ID = item.IDKunde})" class="costomListOnKlick list-group-item">@Html.DisplayFor(x => item.Ort)</a></td>
                                <td style="width: 18%;"><a href="@Url.Action("KundenBearbeiten", "Home", new {ID = item.IDKunde})" class="costomListOnKlick list-group-item">Bearbeiten</a></td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
