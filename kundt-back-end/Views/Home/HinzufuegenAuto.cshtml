
@{
    ViewBag.Title = "HinzufuegenAuto";
}
<style>
    .table1 {
        font-family: arial, sans-serif;
    }

    .hinzuAuto {
        min-width: 200px;
        max-width: 200px;
    }

    .autoHinzu_tr {
        background-color: white;
        min-width: 200px;
        max-width: 200px;
        padding-bottom: 10px;
    }

    .picBorder {
        border: solid 1px;
        border-color: lightgray;
    }

    .labelCheckbox {
        margin-left: 20px;
        font-style: unset;
    }
    .buttonOrangeNextStep {
        background-color: #f99b1c;
        border: none;
        color: #ffffff;
        font-size: 15px;
        height: 50px;
        width: 200px;
        font-weight: 700;
        letter-spacing: .5px;
        text-align: center;
        display: inline-block;
        border-radius: 4px;
    }
</style>

<div class="container">
    <center style="margin-bottom:50px">
        <h2>Fahrzeug hinzufügen</h2>
    </center>
    <div class="col-xs-5">
        <img src="~/Content/img/alfa-romeo-giulia-silber-2016.png" alt="Alternate Text" style="max-height:200px" class="picBorder" />
        <p><a href="#">Bild hinzufügen/ändern</a></p>
    </div>
    <div class="col-xs-6 col-xs-offset-1 table-responsive text-right" style="max-width:400px">
        <table class="table table-hover">
            <tr class="autoHinzu_tr">
                <td>Marke:</td>
                <td>
                    <select id="Marke" class="hinzuAuto">
                        <optgroup label="Marke wählen">
                            <option value="1">Mazda</option>
                            <option value="2">Honda</option>
                            <option value="3">VW</option>
                        </optgroup>
                    </select>
                </td>
            </tr>
            <tr class="autoHinzu_tr">
                <td>Typ:</td>
                <td>
                    <input type="text" name="name" value="" class="hinzuAuto" />
                </td>
            </tr>
            <tr class="autoHinzu_tr">
                <td>Kategorie:</td>
                <td>
                    <select id="Kategorie" class="hinzuAuto">
                        <optgroup label="Kategorie wählen">
                            <option value="1">Kleinwagen</option>
                            <option value="2">Mittelklasse</option>
                            <option value="3">Luxus</option>
                        </optgroup>
                    </select>
                </td>
            </tr>
            <tr class="autoHinzu_tr">
                <td>PS:</td>
                <td>
                    <input type="text" name="name" value="" class="hinzuAuto" />
                </td>
            </tr>
            <tr class="autoHinzu_tr">
                <td>Getriebe:</td>
                <td>
                    <select id="Getriebe" class="hinzuAuto">
                        <optgroup label="Getriebe wählen">
                            <option value="1">Manuell</option>
                            <option value="2">Automatik</option>
                        </optgroup>
                    </select>
                </td>
            </tr>
            <tr class="autoHinzu_tr">
                <td>Baujahr:</td>
                <td>
                    <input type="text" name="name" value="" class="hinzuAuto" />
                </td>
            </tr>
            <tr class="autoHinzu_tr">
                <td>Türen:</td>
                <td>
                    <input type="text" name="name" value="" class="hinzuAuto" />
                </td>
            </tr>
            <tr class="autoHinzu_tr">
                <td>Sitze:</td>
                <td>
                    <input type="text" name="name" value="" class="hinzuAuto" />
                </td>
            </tr>
            <tr class="autoHinzu_tr">
                <td>KM-Stand:</td>
                <td>
                    <input type="text" name="name" value="" class="hinzuAuto" />
                </td>
            </tr>
            <tr class="autoHinzu_tr">
                <td>Treibstoff:</td>
                <td>
                    <select id="Treibstoff" class="hinzuAuto">
                        <optgroup label="Treibstoff wählen">
                            <option value="1">Diesel</option>
                            <option value="2">Benzin</option>
                            <option value="3">Elektrisch</option>
                        </optgroup>
                    </select>
                </td>
            </tr>
            <tr class="autoHinzu_tr">
                <td>Mietpreis:</td>
                <td>
                    <input type="text" name="name" value="" class="hinzuAuto" />
                </td>
            </tr>
        </table>
    </div>
    <div class="col-xs-12">
        <fieldset>
            <header>Ausstattungsoptionen:</header>
        </fieldset>
    </div>
    <div class="col-xs-12 text-left">
        <form>
            <div class="col-xs-2">
