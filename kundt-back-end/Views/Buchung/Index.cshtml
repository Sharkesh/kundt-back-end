@model IEnumerable<kundt_back_end.Models.tblBuchung>

@{
    ViewBag.Title = "Index";
}

<style>
    table tr td a {
        display: block;
        height: 100%;
        width: 100%;
        text-decoration: none;
    }

        table tr td a:hover {
            display: block;
            height: 100%;
            width: 100%;
            text-decoration: none;
        }

    .row > .col-lg-4 {
        padding-left: 20px;
        padding-right: 20px;
    }

    table {
        width: 100%;
    }

    thead, tbody, tr, td, th {
        text-align: center;
    }

    .table > thead > tr > th {
        vertical-align: bottom;
        border-bottom: 0px;
    }

    /*thead,*/ tbody, tr /*, td, th*/ {
        display: block;
    }

        tr:after {
            content: ' ';
            display: block;
            visibility: hidden;
            clear: both;
        }

    thead th {
        height: 30px;
    }

    tbody {
        height: 300px;
        overflow-y: auto;
    }

        tbody td, thead th {
            width: auto;
            float: left;
        }
</style>

<div class="container" style="border:2px solid black;">
    <div class="row">
        <div class="col-lg-3">
            <div class="row" style="margin:10px;padding:10px;height:400px;">
                <center><h3>Suchen</h3></center>
                <input type="text" placeholder="Buchung-Nr." class="col-lg-12 SuchFilter_abstand" />
                <input type="text" placeholder="Name" class="col-lg-12 SuchFilter_abstand" />
                <input type="text" placeholder="Kunden-Nr." class="col-lg-12 SuchFilter_abstand" />
                <input type="text" placeholder="Ort" class="col-lg-12 SuchFilter_abstand" />
                <input type="text" placeholder="PLZ" class="col-lg-12 SuchFilter_abstand" />
                <center><h3>Status</h3></center>
                <label class="col-lg-11">Offen</label><input type="checkbox" class="col-lg-1 SuchFilter_abstand" />
                <label class="col-lg-11">Abgeschlossen</label><input type="checkbox" class="col-lg-1 SuchFilter_abstand" />
                <label class="col-lg-11">Problem</label><input type="checkbox" class="col-lg-1 SuchFilter_abstand" />

                <input class="col-lg-6 col-lg-offset-3 SuchFilter_abstand" type="submit" value="Suchen" />
            </div>
        </div>
        <div class="col-lg-9">
            <div class="row table-responsive" style="margin:10px;padding:10px;height:400px;">
                @if (Model.Count() > 0)
                {
                    <table class="table">
                        <thead>
                            <tr style="margin-right:16px;">
                                <th style="width:15%;">@Html.DisplayNameFor(model => model.IDBuchung)</th>
                                <th style="width:15%;">KundenNr.</th>
                                <th style="width:15%;">Vorname</th>
                                <th style="width:15%;">Nachname</th>
                                <th style="width:20%;">Ort</th>
                                <th style="width:10%;">PLZ</th>
                                <th style="width:10%;">Status</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td style="width:15%;"><a href="@Url.Action("Details","Buchung",new { ID = item.IDBuchung })">@Html.DisplayFor(x => item.IDBuchung)</a></td>
                                    <td style="width:15%;"><a href="@Url.Action("Details","Buchung",new { ID = item.IDBuchung })">@Html.DisplayFor(x => item.tblKunde.IDKunde)</a></td>
                                    <td style="width:15%;"><a href="@Url.Action("Details","Buchung",new { ID = item.IDBuchung })">@Html.DisplayFor(x => item.tblKunde.Vorname)</a></td>
                                    <td style="width:15%;"><a href="@Url.Action("Details","Buchung",new { ID = item.IDBuchung })">@Html.DisplayFor(x => item.tblKunde.Nachname)</a></td>
                                    <td style="width:20%;"><a href="@Url.Action("Details","Buchung",new { ID = item.IDBuchung })">@Html.DisplayFor(x => item.tblKunde.tblPLZOrt.Ort)</a></td>
                                    <td style="width:10%;"><a href="@Url.Action("Details","Buchung",new { ID = item.IDBuchung })">@Html.DisplayFor(x => item.tblKunde.tblPLZOrt.PLZ)</a></td>
                                    <td style="width:10%;"><a href="@Url.Action("Details","Buchung",new { ID = item.IDBuchung })">@Html.DisplayFor(x => item.BuchungStatus)</a></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
                else
                {
                        <center><h3>Es gibt noch keine Buchungseintraege</h3></center>
                }

            </div>
        </div>
    </div>
</div>

