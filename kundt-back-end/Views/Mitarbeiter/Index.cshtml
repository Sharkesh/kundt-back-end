@model IEnumerable<kundt_back_end.Models.tblMitarbeiter>

@{
    ViewBag.Title = "Übersicht Mitarbeiter";

}

<style>
    .buttonOrangeSuchen {
        background-color: #f99b1c;
        border: none;
        color: #ffffff;
        font-size: 15px;
        height: 50px;
        width: 200px;
        font-weight: 700;
        letter-spacing: .5px;
        text-align: center;
        display: inline-block;
        border-radius: 4px;
    }

        .buttonOrangeSuchen span {
            cursor: pointer;
            display: inline-block;
            position: relative;
            transition: 0.5s;
        }

            .buttonOrangeSuchen span:after {
                content: '\00bb';
                position: absolute;
                opacity: 0;
                top: 0;
                right: -30px;
                transition: 0.5s;
                font-size: 15px;
            }

        .buttonOrangeSuchen:hover span {
            padding-right: 15px;
        }

            .buttonOrangeSuchen:hover span:after {
                opacity: 1;
                right: 0;
            }

    .buttonOrangeEdit {
        background-color: #f99b1c;
        border: none;
        color: #ffffff;
        font-size: 15px;
        height: 40px;
        width: 100px;
        font-weight: 700;
        letter-spacing: .5px;
        text-align: center;
        display: inline-block;
        border-radius: 4px;
    }
        .buttonOrangeEdit:hover {
            background-color: #f99b1c;
            border: none;
            color: #ffffff;
            font-size: 15px;
            height: 40px;
            width: 100px;
            font-weight: 700;
            letter-spacing: .5px;
            text-align: center;
            display: inline-block;
            border-radius: 4px;
        }


        .buttonOrangeEdit span {
            cursor: pointer;
            display: inline-block;
            position: relative;
            transition: 0.5s;
        }

            .buttonOrangeEdit span:after {
                content: '\00bb';
                position: absolute;
                opacity: 0;
                top: 0;
                right: -30px;
                transition: 0.5s;
                font-size: 15px;
            }

        .buttonOrangeEdit:hover span {
            padding-right: 15px;
        }

            .buttonOrangeEdit:hover span:after {
                opacity: 1;
                right: 0;
            }

    .headingFormat {
        margin: auto auto 20px auto;
        color: white;
        background-color: #f99b1c;
        vertical-align: middle;
        padding: 0px;
        border-radius: 4px;
        box-shadow: lightgray 1px 1px 0px;
        text-align: center;
    }
</style>

<div class="headingFormat">
    <h2 style="padding:5px;">Mitarbeiter Übersicht</h2>
</div>

<div class="container">
    <div class="row">
        <div class="col-lg-3">
            <div class="row" style="margin:10px;padding:10px;">
                <center><h3>Suchen nach</h3></center>
                <input type="text" placeholder="MA-Nr." class="col-lg-12 SuchFilter_abstand" />
                <input type="text" placeholder="Anrede" class="col-lg-12 SuchFilter_abstand" />
                <input type="text" placeholder="Vorname" class="col-lg-12 SuchFilter_abstand" />
                <input type="text" placeholder="Nachname" class="col-lg-12 SuchFilter_abstand" />
                <button class="col-lg-12 SuchFilter_abstand buttonOrangeSuchen" type="submit" value="Suchen"><span>Suchen</span></button>
            </div>
        </div>
        <div class="col-lg-9">
            <div class="row table-responsive" style="margin:10px;padding:10px;height:400px;">
                <table class="table">
                    <thead>
                        <tr>
                            <th class="col-lg-1">
                                @Html.DisplayNameFor(model => model.IDMitarbeiter).
                            </th>
                            <th class="col-lg-1">
                                @Html.DisplayNameFor(model => model.MAVorname)
                            </th>
                            <th class="col-lg-2">
                                @Html.DisplayNameFor(model => model.MANachname)
                            </th>
                            <th class="col-lg-2" style="position: relative; left: -10px;">
                                @Html.DisplayNameFor(model => model.MAAnrede)
                            </th>
                            <th class="col-lg-3" style="position: relative; left: -10px;">@Html.DisplayNameFor(model => model.tblLogin.Email)</th>
                            <th class="col-lg-1">Bearbeiten</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="col-lg-1">
                                    @Html.DisplayFor(modelItem => item.IDMitarbeiter)
                                </td>
                                <td class="col-lg-1">
                                    @Html.DisplayFor(modelItem => item.MAVorname)
                                </td>
                                <td class="col-lg-3">
                                    @Html.DisplayFor(modelItem => item.MANachname)
                                </td>
                                <td class="col-lg-3">
                                    @Html.DisplayFor(modelItem => item.MAAnrede)
                                </td>
                                <td class="col-lg-2">
                                    @Html.DisplayFor(modelItem => item.tblLogin.Email)
                                </td>
                                <td>
                                    <center>
                                        <button class="buttonOrangeEdit">
                                            @Html.ActionLink("Bearbeiten", "Edit", new { id = item.IDMitarbeiter })
                                        </button>
                                    </center>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>