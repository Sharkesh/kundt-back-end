@model kundt_back_end.Models.MitarbeiterModel

@{
    ViewBag.Title = "Mitarbeiter Bearbeiten";
}

<style>
    .headingFormat {
        margin: auto auto 20px auto;
        color: white;
        background-color: #f99b1c;
        vertical-align: middle;
        padding: 0px;
        border-radius: 4px;
        box-shadow: lightgray 1px 1px 0px;
        text-align: center;
    }

    .buttonOrangeNextStep {
        background-color: #f99b1c;
        border: none;
        color: #ffffff;
        font-size: 15px;
        height: 50px;
        width: 200px;
        font-weight: 700;
        letter-spacing: .5px;
        text-align: center;
        display: inline-block;
        border-radius: 4px;
    }

        .buttonOrangeNextStep span {
            cursor: pointer;
            display: inline-block;
            position: relative;
            transition: 0.5s;
        }

            .buttonOrangeNextStep span:after {
                content: '\00bb';
                position: absolute;
                opacity: 0;
                top: 0;
                right: -30px;
                transition: 0.5s;
                font-size: 15px;
            }

        .buttonOrangeNextStep:hover span {
            padding-right: 15px;
        }

            .buttonOrangeNextStep:hover span:after {
                opacity: 1;
                right: 0;
            }

        .buttonOrangeNextStep:hover {
            background-color: #f99b1c;
            border: none;
            color: #ffffff;
            font-size: 15px;
            height: 50px;
            width: 200px;
            font-weight: 700;
            letter-spacing: .5px;
            text-align: center;
        }


    .buttonOrangeReturn {
        background-color: #f99b1c;
        border: none;
        color: #ffffff;
        font-size: 15px;
        height: 50px;
        width: 200px;
        font-weight: 700;
        letter-spacing: .5px;
        text-align: center;
        display: inline-block;
        border-radius: 4px;
    }

        .buttonOrangeReturn span {
            cursor: pointer;
            display: inline-block;
            position: relative;
            transition: 0.5s;
        }

            .buttonOrangeReturn span:after {
                content: '\00ab';
                position: absolute;
                opacity: 0;
                top: 0;
                left: -30px;
                transition: 0.5s;
                font-size: 15px;
            }

        .buttonOrangeReturn:hover span {
            padding-left: 15px;
        }

            .buttonOrangeReturn:hover span:after {
                opacity: 1;
                left: 0;
            }

        .buttonOrangeReturn:hover {
            background-color: #f99b1c;
            border: none;
            color: #ffffff;
            font-size: 15px;
            height: 50px;
            width: 200px;
            font-weight: 700;
            letter-spacing: .5px;
            text-align: center;
        }
</style>

<div class="headingFormat">
    <h2 style="padding:5px;">Mitarbeiter Bearbeiten</h2>
</div>

<div class="container" style="padding-top:15px;">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            @Html.HiddenFor(model => model.IDMitarbeiter)
            @Html.HiddenFor(model => model.Passwort)
            @Html.HiddenFor(model => model.EmailAlt)
            @Html.HiddenFor(model => model.Rolle)
            <div class="form-group">
                @Html.LabelFor(model => model.MAAnrede, "Anrede:", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DropDownList("MAAnrede", Model.AnredeOptionen, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.MAAnrede, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.MAVorname, "Vorname:", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.MAVorname, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.MAVorname, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.MANachname, "Nachname:", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.MANachname, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.MANachname, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Email, "E-Mail:", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Deaktiviert, "Deaktivieren", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    <div class="checkbox">
                        @Html.EditorFor(model => model.Deaktiviert)
                        @Html.ValidationMessageFor(model => model.Deaktiviert, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
            <div class="form-group" style="padding-left:210px;">
                @Html.ActionLink("Passwort zurücksetzen", "PasswortZuruecksetzen", new { id = Model.IDMitarbeiter })
            </div>
        </div>
        <div class="container" style="margin-top:50px;">
            <div class="row">
                <center>
                    <div class="col-lg-6">
                        <a href="@Url.Action("Index","Mitarbeiter")" class="buttonOrangeReturn">
                            <span style="margin-top:15px;">Zurück zu Mitarbeiter</span>
                        </a>
                    </div>
                    <div>
                        <div class="col-lg-6">
                            <button type="submit" value="Save" class="buttonOrangeNextStep"><span>Aktualisieren</span></button>
                        </div>
                    </div>
                </center>
            </div>
        </div>
    }
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
