@model kundt_back_end.Models.MitarbeiterModel

@{
    ViewBag.Title = "MitarbeiterDaten";
}

<style>
    .headingFormat {
        margin: auto auto 20px auto;
        color: white;
        background-color: #f99b1c;
        vertical-align: middle;
        padding: 0px;
        border-radius: 4px;
        box-shadow: lightgray 1px 1px 0px;
        text-align: center;
    }

    .buttonOrangeNextStep {
        background-color: #f99b1c;
        border: none;
        color: #ffffff;
        font-size: 15px;
        height: 50px;
        width: 200px;
        font-weight: 700;
        letter-spacing: .5px;
        text-align: center;
        display: inline-block;
        border-radius: 4px;
    }

        .buttonOrangeNextStep span {
            cursor: pointer;
            display: inline-block;
            position: relative;
            transition: 0.5s;
        }

            .buttonOrangeNextStep span:after {
                content: '\00bb';
                position: absolute;
                opacity: 0;
                top: 0;
                right: -30px;
                transition: 0.5s;
                font-size: 15px;
            }

        .buttonOrangeNextStep:hover span {
            padding-right: 15px;
        }

            .buttonOrangeNextStep:hover span:after {
                opacity: 1;
                right: 0;
            }

        .buttonOrangeNextStep:hover {
            background-color: #f99b1c;
            border: none;
            color: #ffffff;
            font-size: 15px;
            height: 50px;
            width: 200px;
            font-weight: 700;
            letter-spacing: .5px;
            text-align: center;
        }


    .buttonOrangeReturn {
        background-color: #f99b1c;
        border: none;
        color: #ffffff;
        font-size: 15px;
        height: 50px;
        width: 200px;
        font-weight: 700;
        letter-spacing: .5px;
        text-align: center;
        display: inline-block;
        border-radius: 4px;
    }

        .buttonOrangeReturn span {
            cursor: pointer;
            display: inline-block;
            position: relative;
            transition: 0.5s;
        }

            .buttonOrangeReturn span:after {
                content: '\00ab';
                position: absolute;
                opacity: 0;
                top: 0;
                left: -30px;
                transition: 0.5s;
                font-size: 15px;
            }

        .buttonOrangeReturn:hover span {
            padding-left: 15px;
        }

            .buttonOrangeReturn:hover span:after {
                opacity: 1;
                left: 0;
            }

        .buttonOrangeReturn:hover {
            background-color: #f99b1c;
            border: none;
            color: #ffffff;
            font-size: 15px;
            height: 50px;
            width: 200px;
            font-weight: 700;
            letter-spacing: .5px;
            text-align: center;
        }
</style>

<div class="headingFormat">
    <h2 style="padding:5px;">Meine Daten</h2>
</div>

<div class="container">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            @Html.HiddenFor(model => model.IDMitarbeiter)
            @Html.HiddenFor(model => model.Rolle)

            <div class="form-group" style="padding-top:20px;">
                @Html.LabelFor(model => model.MAAnrede, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @* Im Model wird diese dropdown Liste erzeugt über AnredeOptionen *@
                    @Html.DropDownList("MAAnrede", Model.AnredeOptionen, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.MAAnrede, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.MAVorname, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.MAVorname, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.MAVorname, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.MANachname, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.MANachname, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.MANachname, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                </div>
            </div>
            @*Passwort ändern*@
            <div class="form-group" style="padding-left:210px;">
                @Html.ActionLink("Passwort zurücksetzen", "PasswortZuruecksetzenM", new { id = Model.IDMitarbeiter })
            </div>
            </div>
            <div style="padding-top:15px;padding-left:40px;">
            <p>Für Schwirigkeiten beim Ein Logen, wenden sie sich Bitte an ihren Administrator</p>
        </div>
        <div style="margin-top:50px;">
            <div class="row">
                <center>
                    <div class="col-lg-6">
                        <a href="@Url.Action("Index", "Mitarbeiter")">
                            <input type="button" class="buttonOrangeReturn" value="Zurück zu Mitarbeiter" />
                        </a>
                    </div>
                    <div>
                        <div class="col-lg-6">
                            <input type="submit" value="Aktualisieren" class="btn buttonOrangeNextStep" />
                        </div>
                    </div>
                </center>
            </div>
        </div>
    }
</div>
