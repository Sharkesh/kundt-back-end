@model kundt_back_end.Models.BuchungsUebersicht

@{
    ViewBag.Title = "Übersicht";
}

<style>
    table tr td a {
        display: block;
        height: 100%;
        width: 100%;
        text-decoration: none;
    }

        table tr td a:hover {
            display: block;
            height: 100%;
            width: 100%;
            text-decoration: none;
        }

    .row > .col-lg-4 {
        padding-left: 20px;
        padding-right: 20px;
    }

    table {
        width: 100%;
    }

    thead, tbody, tr, td, th {
        text-align: center;
    }

    .table > thead > tr > th {
        vertical-align: bottom;
        border-bottom: 0px;
    }

    /*thead,*/ tbody, tr /*, td, th*/ {
        display: block;
    }

        tr:after {
            content: ' ';
            display: block;
            visibility: hidden;
            clear: both;
        }

    thead th {
        height: 30px;
    }

    tbody {
        height: 300px;
        overflow-y: auto;
    }

        tbody td, thead th {
            width: auto;
            float: left;
        }

    .headingFormat {
        margin: auto auto 20px auto;
        color: white;
        background-color: #f99b1c;
        vertical-align: middle;
        padding: 0px;
        border-radius: 4px;
        box-shadow: lightgray 1px 1px 0px;
        text-align: center;
    }
</style>


<div class="headingFormat">
    <h2 style="padding:5px;">Tagesübersicht & Problemfälle</h2>
</div>
<div class="row">
    <div class="col-lg-4">
        <center><h3>Abholung</h3></center>
        <div class="row table-responsive" style="height:500px;">
            @if (Model.buchungAbholung.Count() > 0)
            {
                <table class="table">
                    <thead>
                        <tr style="margin-right:0px;">
                            <th style="width:20%;">Buchungsnr.</th>
                            <th style="width:40%;">Name</th>
                            <th style="width:40%;">Auto</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.buchungAbholung)
                        {
                            <tr>
                                <td style="width:20%;"><a href="@Url.Action("Edit","Buchung",new { ID = item.IDBuchung })">@Html.DisplayFor(x => item.IDBuchung)</a></td>
                                <td style="width:40%;"><a href="@Url.Action("Edit","Buchung",new { ID = item.IDBuchung })">@Html.DisplayFor(x => item.Vorname) @Html.DisplayFor(x => item.Nachname)</a></td>
                                <td style="width:40%;"><a href="@Url.Action("Edit","Buchung",new { ID = item.IDBuchung })">@Html.DisplayFor(x => item.Auto)</a></td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <center><h3>Heute keine Abholung</h3></center>
            }
        </div>
    </div>
    <div class="col-lg-4">
        <center><h3>Rückgabe</h3></center>
        <div class="row table-responsive" style="height:500px;">
            @if (Model.buchungRueckgabe.Count() > 0)
            {
                <table class="table">
                    <thead>
                        <tr style="margin-right:0px;">
                            <th style="width:20%;">Buchungsnr.</th>
                            <th style="width:40%;">Name</th>
                            <th style="width:40%;">Auto</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.buchungRueckgabe)
                        {
                            <tr>
                                <td style="width:20%;"><a href="@Url.Action("Edit","Buchung",new { ID = item.IDBuchung })">@Html.DisplayFor(x => item.IDBuchung)</a></td>
                                <td style="width:40%;"><a href="@Url.Action("Edit","Buchung",new { ID = item.IDBuchung })">@Html.DisplayFor(x => item.Vorname) @Html.DisplayFor(x => item.Nachname)</a></td>
                                <td style="width:40%;"><a href="@Url.Action("Edit","Buchung",new { ID = item.IDBuchung })">@Html.DisplayFor(x => item.Auto)</a></td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <center><h3>Heute keine Rückgabe</h3></center>
            }
        </div>
    </div>
    <div class="col-lg-4">
        <center><h3>Probleme</h3></center>
        <div class="row table-responsive" style="height:500px;">
            @if (Model.buchungProblem.Count() > 0)
            {
                <table class="table">
                    <thead>
                        <tr style="margin-right:16px;">
                            <th style="width:20%;">Buchungsnr.</th>
                            <th style="width:40%;">Name</th>
                            <th style="width:40%;">Auto</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.buchungProblem)
                        {
                            <tr>
                                <td style="width:20%;"><a href="@Url.Action("Edit","Buchung",new { ID = item.IDBuchung })">@Html.DisplayFor(x => item.IDBuchung)</a></td>
                                <td style="width:40%;"><a href="@Url.Action("Edit","Buchung",new { ID = item.IDBuchung })">@Html.DisplayFor(x => item.Vorname) @Html.DisplayFor(x => item.Nachname)</a></td>
                                <td style="width:40%;"><a href="@Url.Action("Edit","Buchung",new { ID = item.IDBuchung })">@Html.DisplayFor(x => item.Auto)</a></td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <center><h3>Keine Probleme</h3></center>
            }
        </div>
    </div>
</div>